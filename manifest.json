{
    "manifest_version": 3,
    "name": "Google Tasks to Calendar",
    "version": "1.0",
    "description": "Add Google Tasks to your Calendar with one click",
    "permissions": [
      "activeTab",
      "scripting",
      "identity",
      "https://www.googleapis.com/"
    ],
    "host_permissions": [
      "https://tasks.google.com/*"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["https://tasks.google.com/*"],
        "js": ["content.js"]
      }
    ],
    "background": {
      "service_worker": "background.js"
    }
  }